<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchAndMatch"
    android:background="@color/colorGlobalWhite"
    android:id="@+id/mLlRootView"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLlContentView"
        style="@style/MatchAndWrap"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mIvStateIcon"
            style="@style/WrapAndWrap"
            android:layout_marginTop="@dimen/dp_50"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_voice_state_success" />

        <TextView
            android:id="@+id/mTvSubTitle"
            style="@style/MatchAndWrap"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/activity_verify_telephone_number_title"
            android:textColor="@color/colorLoginSubTitle"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <com.linwei.inputboxview.widget.TelephoneNumberView
            android:id="@+id/mTNumberView"
            style="@style/WrapAndWrap"
            android:layout_marginTop="@dimen/dp_20"
            app:telephone_number_input_box_backgroud="@drawable/select_input_box_rim_bg"
            app:telephone_number_input_box_cursor_type="@drawable/shape_input_box_cursor"
            app:telephone_number_input_box_cursor_visible="false"
            app:telephone_number_input_box_end_index="7"
            app:telephone_number_input_box_start_index="3"
            app:telephone_number_input_box_text_color="@color/colorInputBoxTextColor"
            app:telephone_number_input_box_text_size="8sp"
            app:telephone_number_spacing="5dp"
            app:telephone_number_text_color="@color/colorInputBoxTextColor"
            app:telephone_number_text_size="8sp"
            app:telephone_number_width="30dp" />

        <com.linwei.inputboxview.widget.TelephoneNumberView
            android:id="@+id/mTNumberView2"
            style="@style/WrapAndWrap"
            app:telephone_number_input_box_backgroud="@drawable/select_input_box_line_bg"
            app:telephone_number_input_box_cursor_type="@drawable/shape_input_box_cursor"
            app:telephone_number_input_box_cursor_visible="false"
            app:telephone_number_input_box_end_index="7"
            app:telephone_number_input_box_start_index="3"
            app:telephone_number_input_box_text_color="@color/colorInputBoxTextColor"
            app:telephone_number_input_box_text_size="8sp"
            app:telephone_number_spacing="5dp"
            app:telephone_number_text_color="@color/colorInputBoxTextColor"
            app:telephone_number_text_size="8sp"
            app:telephone_number_width="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/mBtConfirm"
        style="@style/MatchAndWrap.LoginButtonStyle"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_50"
        android:text="@string/confirm_button" />
</LinearLayout>
